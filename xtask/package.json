    "out:schema": "tsx out-schema.ts"
  },
  "dependencies": {
    "@napi-rs/simple-git": "^0.1.19",
    "@octokit/rest": "^21.0.2",
    "@rainbowatcher/toml-edit-js": "^0.2.1",
    "chalk": "^5.3.0",
    "clipanion": "^4.0.0-rc.4",
    "diff": "^7.0.0",
    "es-toolkit": "^1.24.0",
    "esbuild": "^0.24.0",
    "execa": "^9.4.0",
    "fast-glob": "^3.3.2",
    "minimatch": "^10.0.1",
    "semver": "^7.6.3",
    "type-fest": "^4.26.1",
    "typescript": "5.8.3",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/diff": "^5.2.3",
    "@types/node": "22.7.4",
    "@types/semver": "^7",
    "tsx": "^4.19.2",
    "vitest": "2.1.2",
    "zod-to-json-schema": "3.23.5"
  }
