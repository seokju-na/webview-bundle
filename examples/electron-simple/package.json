{
  "name": "@example/electron-simple",
  "private": true,
  "type": "module",
  "main": "./dist/main.mjs",
  "scripts": {
    "start": "electron .",
    "out": "yarn out:main && yarn out:preload",
    "out:main": "esbuild src/main.ts --bundle --outfile=./dist/main.mjs --target=node20 --format=esm --platform=node --external:electron --external:@webview-bundle/electron --sourcemap",
    "out:preload": "esbuild src/preload.ts --bundle --outfile=./dist/preload.js --target=node20 --format=cjs --platform=node --external:electron --sourcemap",
    "create-bundle": "wvb create renderer --outfile ./bundles/out/out_1.0.0.wvb --truncate"
  },
  "dependencies": {
    "@webview-bundle/electron": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "22.18.3",
    "@webview-bundle/cli": "workspace:^",
    "electron": "^35.7.5",
    "esbuild": "0.25.3",
    "typescript": "5.9.2"
  }
}
