{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    ".yarn",
    "*.json",
    "*.jsonc",
    "!**/package.json",
    "!**/tsconfig.json",
    "!**/xtask.json",
    "*.yaml",
    "*.yml",
    "*.toml",
    "**/index.cjs",
    "**/index.js",
    "**/*.d.ts",
    "**/*.d.cts"
  ],
  "printWidth": 100,
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "experimentalSortImports": {
    "newlinesBetween": false
  }
}
