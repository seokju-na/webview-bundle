{
  "name": "@webview-bundle/node-binding",
  "description": "Node binding for webview bundle",
  "version": "0.1.0",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "index.d.ts",
    "index.d.cts",
    "index.js",
    "index.cjs",
    "README.md",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/seokju-na/webview-bundle",
  "repository": {
    "type": "git",
    "url": "https://github.com/seokju-na/webview-bundle",
    "directory": "packages/node-binding"
  },
  "bugs": {
    "url": "https://github.com/seokju-na/webview-bundle/issues"
  },
  "author": {
    "name": "Seokju Na",
    "email": "seokju.me@gmail.com",
    "url": "https://github.com/seokju-na"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 6.14.2 < 7 || >= 8.11.2 < 9 || >= 9.11.0 < 10 || >= 10.0.0"
  },
  "napi": {
    "binaryName": "node-binding",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "i686-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf",
      "aarch64-apple-darwin",
      "aarch64-linux-android",
      "x86_64-unknown-freebsd",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-linux-androideabi"
    ]
  },
  "scripts": {
    "artifacts": "just xtask artifacts napi packages/node-binding && napi artifacts",
    "build:napi": "yarn build:napi:esm && yarn build:napi:cjs",
    "build:napi:esm": "napi build --platform --release --esm --no-const-enum",
    "build:napi:cjs": "napi build --platform --release --js=index.cjs --dts=index.d.cts --no-const-enum",
    "build:napi:debug": "napi build --platform --esm"
  },
  "devDependencies": {
    "@napi-rs/cli": "3.1.5",
    "@types/node": "22.7.4",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  }
}
