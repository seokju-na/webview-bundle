{
  "name": "@webview-bundle/node",
  "description": "Webview bundle API for Node.js",
  "version": "0.0.0",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "index.js",
    "index.cjs",
    "index.d.ts",
    "index.d.cts",
    "README.md",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/seokju-na/webview-bundle",
  "repository": {
    "type": "git",
    "url": "https://github.com/seokju-na/webview-bundle",
    "directory": "packages/node"
  },
  "bugs": {
    "url": "https://github.com/seokju-na/webview-bundle/issues"
  },
  "author": {
    "name": "Seokju Na",
    "email": "seokju.me@gmail.com",
    "url": "https://github.com/seokju-na"
  },
  "license": "MIT",
  "napi": {
    "binaryName": "binding",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "i686-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf",
      "x86_64-unknown-freebsd",
      "aarch64-apple-darwin",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc"
    ]
  },
  "engines": {
    "node": ">= 12.22.0 < 13 || >= 14.17.0 < 15 || >= 15.12.0 < 16 || >= 16.0.0"
  },
  "scripts": {
    "prepack": "yarn build-napi",
    "artifacts": "just xtask artifacts napi packages/node && napi artifacts",
    "build-napi": "yarn build-napi-esm && yarn build-napi-cjs",
    "build-napi-esm": "napi build --platform --release --js=index.js --dts=index.d.ts --esm --no-const-enum --no-dts-cache",
    "build-napi-cjs": "napi build --platform --release --js=index.cjs --dts=index.d.cts --no-const-enum --no-dts-cache",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.2",
    "@napi-rs/cli": "3.1.5",
    "@types/node": "catalog:",
    "get-port": "^7.1.0",
    "hono": "^4.10.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
