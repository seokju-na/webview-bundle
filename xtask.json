{
  "$schema": "./xtask.$schema.json",
  "rootChangelog": "CHANGELOG.md",
  "packages": {
    "core": {
      "versionedFiles": [
        "packages/core/Cargo.toml"
      ],
      "changelog": "packages/core/CHANGELOG.md",
      "scopes": ["core", "all"]
    },
    "tauri": {
      "versionedFiles": [
        "packages/tauri/Cargo.toml"
      ],
      "changelog": "packages/tauri/CHANGELOG.md",
      "scopes": ["tauri", "all"]
    },
    "cli": {
      "versionedFiles": [
        "packages/cli/package.json",
        "packages/cli/Cargo.toml"
      ],
      "changelog": "packages/cli/CHANGELOG.md",
      "scopes": ["cli", "all"],
      "beforePublishScripts": [
        {
          "command": "yarn",
          "args": ["artifacts"],
          "cwd": "packages/cli"
        }
      ]
    },
    "electron": {
      "versionedFiles": [
        "packages/electron/package.json",
        "packages/electron/Cargo.toml"
      ],
      "changelog": "packages/electron/CHANGELOG.md",
      "scopes": ["electron", "all"],
      "beforePublishScripts": [
        {
          "command": "yarn",
          "args": ["artifacts"],
          "cwd": "packages/electron"
        }
      ]
    }
  },
  "artifacts": {
    "dir": "artifacts-merged",
    "files": [
      {
        "source": "packages/cli/*.node",
        "dist": "packages/cli/artifacts"
      },
      {
        "source": "packages/electron/*.node",
        "dist": "packages/electron/artifacts"
      }
    ]
  },
  "github": {
    "repo": {
      "owner": "seokju-na",
      "name": "webview-bundle"
    }
  }
}
