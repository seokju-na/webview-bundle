{
  "$schema": "./xtask.$schema.json",
  "rootChangelog": "CHANGELOG.md",
  "packages": {
    "core": {
      "path": "packages/core"
    },
    "node": {
      "path": "packages/napi",
      "beforePublishScripts": [
        {
          "command": "yarn",
          "args": ["artifacts"],
          "cwd": "packages/node"
        }
      ]
    },
    "tauri": {
      "path": "packages/tauri"
    },
    "cli": {
      "path": "packages/cli"
    },
    "electron": {
      "path": "packages/electron"
    },
    "remote-cloudflare": {
      "path": "packages/remote-cloudflare",
      "scopes": ["remote"]
    },
    "remote-cloudflare-pulumi": {
      "path": "packages/remote-cloudflare-pulumi",
      "scopes": ["remote"]
    }
  },
  "artifacts": {
    "dir": "artifacts-merged",
    "files": [
      {
        "source": "packages/node/*.node",
        "dist": "packages/node/artifacts"
      }
    ]
  },
  "github": {
    "repo": {
      "owner": "seokju-na",
      "name": "webview-bundle"
    }
  }
}
