{
  "$schema": "./xtask.$schema.json",
  "rootChangelog": "CHANGELOG.md",
  "packages": {
    "core": {
      "path": "packages/core"
    },
    "napi": {
      "path": "packages/napi"
    },
    "tauri": {
      "path": "packages/tauri"
    },
    "cli": {
      "path": "packages/cli",
      "beforePublishScripts": [
        {
          "command": "yarn",
          "args": ["artifacts"],
          "cwd": "packages/cli"
        }
      ]
    },
    "electron": {
      "path": "packages/electron",
      "beforePublishScripts": [
        {
          "command": "yarn",
          "args": ["artifacts"],
          "cwd": "packages/electron"
        }
      ]
    }
  },
  "artifacts": {
    "dir": "artifacts-merged",
    "files": [
      {
        "source": "packages/cli/*.node",
        "dist": "packages/cli/artifacts"
      },
      {
        "source": "packages/electron/*.node",
        "dist": "packages/electron/artifacts"
      }
    ]
  },
  "github": {
    "repo": {
      "owner": "seokju-na",
      "name": "webview-bundle"
    }
  }
}
